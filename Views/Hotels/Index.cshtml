@model IEnumerable<HarmonyHotles.Models.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<h1>Hotels</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4 d-flex align-items-stretch">
            <div class="card shadow-sm">
           
                <img src="@item.Images.FirstOrDefault()?.Imagepath" class="card-img-top" asp-append-version="true" alt="Room type image" style="height: 200px; object-fit: cover;">
            

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><strong>Location:</strong> @item.Location</p>
                    <p class="card-text"><strong>Rating:</strong> @item.Rating</p>
                 @*    <p class="card-text"><strong>Description:</strong> @item.Hotelsdescription</p> *@
                    <p class="card-text"><strong>City:</strong> @item.City?.Cityname</p>
                    <p class="card-text"><strong>Country:</strong> @item.Country?.Countryname</p>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Hotelid" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Hotelid" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Hotelid" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
