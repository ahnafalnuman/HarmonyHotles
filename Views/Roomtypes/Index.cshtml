@model IEnumerable<HarmonyHotles.Models.Roomtype>

@{
    ViewData["Title"] = "Roomtypes Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<h1>Roomtypes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <!-- عرض الصورة الأولى فقط -->
                <img src="@item.Images.FirstOrDefault()?.Imagepath" class="card-img-top" asp-append-version="true" alt="Room type image" style="height: 200px; object-fit: cover;">
              

                <div class="card-body">
                    <h5 class="card-title">@item.Typename</h5>
                    <p class="card-text"><strong>Description:</strong> @item.Roomtypesdescription</p>
                    <p class="card-text"><strong>Room Size:</strong> @item.Roomsize m²</p>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Roomtypeid" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Roomtypeid" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Roomtypeid" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
