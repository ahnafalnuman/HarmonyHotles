@model HarmonyHotles.Models.Event

@{
    ViewData["Title"] = "Create Event";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="mb-0">Create New Event</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Countryid" class="form-label fw-bold">Country</label>
                        <select asp-for="Countryid" class="form-select shadow-sm" asp-items="ViewBag.Countryid"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Cityid" class="form-label fw-bold">City</label>
                        <select asp-for="Cityid" class="form-select shadow-sm" asp-items="ViewBag.Cityid"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Hotelid" class="form-label fw-bold">Hotel</label>
                        <select asp-for="Hotelid" class="form-select shadow-sm" asp-items="ViewBag.Hotelid"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Event Name</label>
                        <input asp-for="Name" class="form-control border-2 shadow-sm" placeholder="Enter event name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Eventsdescription" class="form-label fw-bold">Event Description</label>
                        <textarea asp-for="Eventsdescription" class="form-control border-2 shadow-sm" placeholder="Enter event description" rows="4"></textarea>
                        <span asp-validation-for="Eventsdescription" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Location" class="form-label fw-bold">Location</label>
                        <input asp-for="Location" class="form-control border-2 shadow-sm" placeholder="Enter event location" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Ticketprice" class="form-label fw-bold">Ticket Price</label>
                        <input asp-for="Ticketprice" class="form-control border-2 shadow-sm" placeholder="Enter ticket price" />
                        <span asp-validation-for="Ticketprice" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Timefrom" class="form-label fw-bold">Start Time</label>
                        <input asp-for="Timefrom" class="form-control border-2 shadow-sm" placeholder="Select start time" />
                        <span asp-validation-for="Timefrom" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Timeto" class="form-label fw-bold">End Time</label>
                        <input asp-for="Timeto" class="form-control border-2 shadow-sm" placeholder="Select end time" />
                        <span asp-validation-for="Timeto" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Upload Event Images</label>
                        <input type="file" name="images" multiple class="form-control border-2 shadow-sm" />
                    </div>
                </div>

                <div class="text-center">
                    <input type="submit" value="Create Event" class="btn btn-lg btn-success shadow-sm px-5" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
    </div>
</div>
