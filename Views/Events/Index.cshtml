@model IEnumerable<HarmonyHotles.Models.Event>

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center">Events</h1>

    <div class="text-right mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Event</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/events/@(item.Images.FirstOrDefault()?.Imagepath ?? "default-image.jpg")" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Eventsdescription</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Location:</strong> @item.Location</li>
                            <li class="list-group-item"><strong>Ticket Price:</strong> @item.Ticketprice?</li>
                            <li class="list-group-item"><strong>Time From:</strong> @item.Timefrom</li>
                            <li class="list-group-item"><strong>Time To:</strong> @item.Timeto</li>
                            <li class="list-group-item"><strong>City:</strong> @item.City.Cityname</li>
                            <li class="list-group-item"><strong>Country:</strong> @item.Country.Countryname</li>
                            <li class="list-group-item"><strong>Hotel:</strong> @item.Hotel.Name</li>
                        </ul>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Eventid" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Eventid" class="btn btn-sm btn-outline-secondary">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Eventid" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
