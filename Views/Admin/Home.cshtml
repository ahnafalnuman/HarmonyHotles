@model Tuple<IEnumerable<Destination>, IEnumerable<Video>, IEnumerable<Slider>, IEnumerable<Footerlink>, Footersetting, Header, IEnumerable<Socialmedialink>>

@{
    ViewData["Title"] = "Admin Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- slider_area_start -->
<div class="slider_area">
    <div class="slider_active owl-carousel">
        @foreach (var slider in Model.Item3)  @* العنصر الثالث في الـ Tuple خاص بالـ Sliders *@
        {
            <div class="single_slider d-flex align-items-center slider_bg_1 overlay" style="background-image: url('@slider.Imagepath');">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-12 col-md-12">
                            <div class="slider_text text-center">
                                <h3>@slider.Title</h3>
                                <p>@slider.Description</p>
                                <a href="@slider.Buttonlink" class="boxed-btn3">@slider.Buttontext</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- slider_area_end -->
<!-- popular_destination_area_start  -->
<div class="popular_destination_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section_title text-center mb_70">
                    <h3>Popular Destination</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var destination in Model.Item1) @* العنصر الأول في الـ Tuple خاص بالـ Destinations *@
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single_destination">
                        <div class="thumb">
                            <img src="@destination.Imagepath" alt="">
                        </div>
                        <div class="content">
                            <p class="d-flex align-items-center">@destination.Country <a href="#"> @destination.Placescount Places</a> </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- popular_destination_area_end -->
<!-- video_area_start  -->
<div class="video_area video_bg overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="video_wrap text-center">
                    <h3>@Model.Item2.FirstOrDefault()?.Title</h3>
                    <div class="video_icon">
                        <a class="popup-video video_play_button" href="@Model.Item2.FirstOrDefault()?.Videopath">
                            <i class="fa fa-play"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- video_area_end  -->
<!-- footer_start  -->
<footer class="footer">
    <div class="footer_top">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="footer_widget">
                        <h3 class="footer_title">@Model.Item5.Logopath</h3>
                        <p>@Model.Item5.Address</p>
                        <p>@Model.Item5.Phonenumber</p>
                        <p>@Model.Item5.Email</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="footer_widget">
                        <h3 class="footer_title">Useful Links</h3>
                        <ul class="footer_links">
                            @foreach (var link in Model.Item4)  @* العنصر الرابع في الـ Tuple خاص بالـ FooterLinks *@
                            {
                                <li><a href="@link.Linktext">@link.Linktext</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="footer_widget">
                        <h3 class="footer_title">Follow Us</h3>
                        <ul class="social_media">
                            @foreach (var socialLink in Model.Item7)  @* العنصر السابع في الـ Tuple خاص بالـ SocialMediaLinks *@
                            {
                                <li><a href="@socialLink.Urllink"><i class="@socialLink.Urllink"></i></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- footer_end  -->
