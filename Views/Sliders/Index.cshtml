@model IEnumerable<HarmonyHotles.Models.Slider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buttontext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buttonlink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isactive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Displayorder)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
           
                <td>
                    <img src=@Url.Content("~/images/sliders/"+ item.Imagepath )
                         asp-append-version="true" style="border-radius:15%"
                         width="200" height="200" />

                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Buttontext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buttonlink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isactive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Displayorder)
            </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Sliderid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Sliderid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Sliderid">Delete</a>
                </td>

        </tr>
}
    </tbody>
</table>
