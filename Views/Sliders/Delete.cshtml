@model HarmonyHotles.Models.Slider

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Slider</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagepath)
        </dt>
        <dd class = "col-sm-10">
            <img src=@Url.Content("~/images/sliders/" + Model.Imagepath) asp-append-version="true"
                 style="border-radius:15%"
                 width="100" height="100" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Buttontext)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Buttontext)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Buttonlink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Buttonlink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Isactive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Isactive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Displayorder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Displayorder) 
            </dd>

    </dl>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Sliderid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
   </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
