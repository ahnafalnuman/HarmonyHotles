@model IEnumerable<HarmonyHotles.Models.Event>

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_GustLayout.cshtml";
}

<style>
   /* تنسيقات CSS مخصصة */
    h3 {
        text-align: center;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .fa-heart {
        font-size: 1.5rem;
        background: white;
        padding: 5px;
        border-radius: 50%;
    }

    .card-body h5 {
        font-weight: bold;
    }

    .card-body p {
        margin-bottom: 0.5rem;
    }

    .search_form .form-control {
        border-radius: 0;
        box-shadow: none;
        border: 1px solid #ccc;
        height: 50px;
    }

    .search_btn .btn {
        height: 50px;
        border-radius: 0;
    }

    .no-results {
        text-align: center;
        padding: 50px 0;
        font-size: 1.5rem;
        color: #888;
    }
</style>

<div class="where_togo_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <div class="form_area">
                    <h3>Where you want to go?</h3>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="search_wrap">
                    <form class="search_form" asp-action="DisplayAllEvent" asp-controller="Home" method="post">
                        <div class="input_field">
                            <input type="text" name="destination" placeholder="Where to go?" class="form-control" />
                        </div>
                        <div class="input_field">
                            <input type="date" name="startDate" class="form-control" placeholder="Date from" />
                        </div>
                        <div class="input_field">
                            <input type="date" name="endDate" class="form-control" placeholder="Date to" />
                        </div>
                        <div class="search_btn">
                            <button class="boxed-btn4 btn btn-primary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>






<!-- Search Form End -->

<div class="col-lg-6">
    <div class="section_title text-center mb-4">
        <h3 class="all-cities-title">Events</h3>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="border-radius: 15px; overflow: hidden; position: relative;">
                    <!-- صورة الفعالية -->
                    <img src="@Url.Content("~/images/events/" + item.Images.FirstOrDefault()?.Imagepath)" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;" asp-append-version="true">
                    <!-- أيقونة القلب -->
                    <a asp-action="AddToFavorites" asp-controller="Events" asp-route-id="@item.Eventid" class="position-absolute top-0 end-0 m-2" title="Add to Favorites">
                        <i class="far fa-heart text-danger"></i>
                    </a>

                    <!-- محتوى البطاقة -->
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <i class="fas fa-map-marker-alt text-primary"></i> @(item.City != null ? item.City.Cityname : " no city")
                        </p>
                        <p class="card-text fw-bold">
                            <i class="fas fa-money-bill-wave text-success"></i> @item.Ticketprice JD
                        </p>
                        <a asp-action="Events" asp-controller="Home" asp-route-id="@item.Eventid" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

 </div>
