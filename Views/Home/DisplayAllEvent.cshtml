@model IEnumerable<HarmonyHotles.Models.Event>

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_GustLayout.cshtml";

    }


<div class="col-lg-6">
    <div class="section_title text-center mb-4">
        <h3 class="all-cities-title">Events</h3>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="border-radius: 15px; overflow: hidden; position: relative;">
                    <!-- صورة الفعالية -->
                    <img src="~/images/events/@item.Images.FirstOrDefault()?.Imagepath" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <!-- أيقونة القلب -->
                    <a asp-action="AddToFavorites" asp-controller="Events" asp-route-id="@item.Eventid" class="position-absolute top-0 end-0 m-2" title="Add to Favorites">
                        <i class="far fa-heart text-danger"></i>
                    </a>

                    <!-- محتوى البطاقة -->
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <i class="fas fa-map-marker-alt text-primary"></i> @item.City.Cityname
                        </p>
                        <p class="card-text fw-bold">
                            <i class="fas fa-money-bill-wave text-success"></i> @item.Ticketprice JD
                        </p>
                        <a asp-action="Details" asp-controller="Events" asp-route-id="@item.Eventid" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    h3 {
        text-align: center;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    .fa-heart {
        font-size: 1.5rem;
        background: white;
        padding: 5px;
        border-radius: 50%;
    }

    .card-body h5 {
        font-weight: bold;
    }

    .card-body p {
        margin-bottom: 0.5rem;
    }
</style>


