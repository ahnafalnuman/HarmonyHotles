@{
    ViewData["Title"] = "DisplayAllCountries";
    Layout = "~/Views/Shared/_GustLayout.cshtml";
}

<div class="popular_destination_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="section_title text-center mb_70">
                    <h3 class="all-cities-title">ALL COUNTRIES</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var country in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4 d-flex justify-content-center">
                    <div class="exclusive-card">
                        <div class="thumb">
                            <img src="@Url.Content("~/images/Countries/" + country.Imagepath)" alt="@country.Countryname" class="card-img-top">
                        </div>
                        <div class="content">
                            <h5 class="card-title">@country.Countryname</h5>
                            <p class="card-text">
                                <span class="hotel-count">
                                    @country.Cities.Count Cities
                                </span>
                            </p>
                            <a asp-controller="Home" asp-action="DisplayCities" asp-route-countryId="@country.Countryid" class="btn btn-primary">View Cities</a>
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>

    .exclusive-card {
        width: 320px;
        height: 450px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
    }

        .exclusive-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
        }

        .exclusive-card .thumb {
            border-radius: 15px;
            overflow: hidden;
            height: 60%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .exclusive-card .thumb img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

        .exclusive-card:hover .thumb img {
            transform: scale(1.1);
        }

        .exclusive-card .content {
            text-align: center;
        }

            .exclusive-card .content h5 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #fff;
                margin-bottom: 10px;
                background: linear-gradient(45deg, #ff6b6b, #f09433);
                -webkit-background-clip: text;
                color: transparent;
            }

            .exclusive-card .content p {
                font-size: 1rem;
                color: #ddd;
            }

            .exclusive-card .content .hotel-count {
                font-size: 1.2rem;
                color: #3498db;
                font-weight: bold;
                margin-top: 10px;
                display: block;
            }

    .btn-primary {
        background: linear-gradient(45deg, #3498db, #8e44ad);
        border: none;
        padding: 10px 20px;
        border-radius: 50px;
        color: #fff;
        font-weight: bold;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #2980b9, #8e44ad);
        }

</style>
